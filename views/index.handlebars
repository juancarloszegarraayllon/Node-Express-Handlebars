<img id="logo" class="burger-time center-block" src="/assets/img/BurgerTime-Logo.png" alt="Burger Time Logo" />
        <button type="button" class="btn btn-warning btn-lg center-block" data-toggle="modal" data-target="#burger-Modal">Click to enter a Burger you want to eat</button>
<br>
<br>
    <div class="row">
        <div class="col col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Eat-Da-Burger!</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        {{#each burgers}}
                            {{#unless this.devoured}}
                                      <div>
                                        <img id="burger-img" class="burger-img img-responsive" src="/assets/img/burger.png" alt="Burger Image">
                                      </div>
                                        <p id="burgers-name" class="text-center">{{this.name}}</p>
                                        <br>
                                        <div class="text-center">
                                        <form action="burgers/devour/{{this.id}}?_method=PUT" method="POST">
                                            <input type="hidden" name="devoured" value="true">
                                            <button class="btn btn-success" >Devour It!</button>
                                        </form>
                                        <br>   
                                        <form action="burgers/clear/{{this.id}}?_method=DELETE" method="POST">
                                            <input type="hidden" name="id" value="{{this.id}}">
                                            <button class="btn btn-danger" >Remove Burger?</button>
                                        </form>
                                         <br>
                                        </div>                                
                            {{/unless}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Devoured Burgers</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        {{#each burgers}}
                            {{#if this.devoured}}
                                    <div>
                                        <img id="burger-img" class="burger-img img-responsive" src="assets/img/devouredburger.png" alt="Burger Image">
                                    </div>
                                        <p id="burgers-name" class="text-center">{{this.name}}</p>  
                                        <br>                              
                                    <div class="text-center">
                                        <form action="burgers/clear/{{this.id}}?_method=DELETE" method="POST">
                                            <input type="hidden" name="id" value="{{this.id}}">
                                            <button class="btn btn-warning" type="submit">Clear your Burger?</button>
                                        </form>
                                        <br> 
                                    </div>                                
                            {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <!-- Create Burgers Modal -->
        <div class="modal fade" id="burger-Modal" tabindex="-1" role="dialog" aria-labelledby="myBurgerModal">
            <div class="modal-dialog modal-lg" role="document">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h5 class="modal-title" id="#myBurgerModal">Create Burgers</h5>
                    </div>
                    <form class="create-update-form" action="/burgers/create" method="POST">
                        <div class="burger-create modal-body">
                            <div class="form-group">
                                <label for="burger">Burger Type</label>
                                <textarea rows="2" class="form-control" id="burger" name="name" placeholder="Enter a Burger you want to eat."></textarea>
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="devoured" value="0">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-md btn-success" type="submit">Confirm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>